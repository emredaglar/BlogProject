@using BlogProject.EntityLayer.Concrete
@model List<Article>

<div class="col-lg-8">
    @foreach (var item in Model)
    {
        <div class="single-recent-blog-post">
            <div class="thumb">
                <img class="img-fluid" src="@item.CoverImageUrl" alt="">
                <ul class="thumb-info">
                    <li><a href="#"><i class="ti-user"></i>@item.AppUser.Name</a></li>
                    <li><a href="#"><i class="ti-notepad"></i>@item.CreatedDate.ToShortDateString()</a></li>
                    <li><a href="#"><i class="ti-themify-favicon"></i>@item.Comments.Count</a></li>
                    <li><a href="#"><i class="ti-themify-favicon"></i>@item.category.CategoryName</a></li>
                   
                  
                </ul>
            </div>
            <div class="details mt-20">
                <a href="/sensive-master/blog-single.html">
                    <h3>
                        @item.Title
                    </h3>
                </a>
                <p class="tag-list-inline">Tag: <a href="#">Seyehat</a>, <a href="#">Kamp</a>, <a href="#">Teknoloji</a>, <a href="#">Doğa</a></p>
                <p>@item.Description.Substring(0, 100)...</p>
                <a class="button" href="/ArticleDetail/Index/@item.ArticleId">Devamını Oku <i class="ti-arrow-right"></i></a>
            </div>
        </div>
    }
    

    <nav class="blog-pagination justify-content-center d-flex">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a href="?page=@(ViewBag.CurrentPage - 1)" class="page-link" aria-label="Previous">
                        <i class="ti-angle-left"></i>
                    </a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a href="?page=@i" class="page-link">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a href="?page=@(ViewBag.CurrentPage + 1)" class="page-link" aria-label="Next">
                        <i class="ti-angle-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>
<style>
    .single-recent-blog-post .thumb img {
        width: 730px !important;
        height: 400px !important;
        object-fit: cover; /* Görselin boyuta sığmasını sağlar */
    }
</style>

