@using BlogProject.EntityLayer.Concrete
@model Comment
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="midde_cont">
	<div class="container-fluid">
		<div class="row column1">
			<div class="col-md-2"></div>
			<div class="col-md-12">
				<div class="white_shd full">
					<div class="full price_table padding_infor_info">
						<div class="row">
							<div class="col-lg-12">
								<div class="full inner_elements">
									<div class="tab_style2">
										<div class="tabbar">
											

											<form method="post" asp-action="UpdateComment" asp-controller="Comment">
												<input type="hidden" asp-for="CommentId" />
												<input type="hidden" asp-for="AppUserId" />
												<div class="tab-content" id="nav-tabContent">
													<div class="tab-pane fade show active" id="recent_activity" role="tabpanel" aria-labelledby="nav-home-tab">
														<div class="msg_list_main">
															<label>Blog Yazısı</label>
															<input type="text" value="@Model.Article.Title" class="form-control" readonly />
															<br />
															<label>Yorumunuz</label>
															<textarea type="text" rows="5" cols="3" value="@Model.Detail"  name="Detail" class="form-control"></textarea>
															<br />
															<button type="submit" class="btn cur-p btn-success">Güncelle</button>
														</div>
													</div>
												</div>
											</form>

										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-2"></div>
			</div>
		</div>
	</div>
</div>

